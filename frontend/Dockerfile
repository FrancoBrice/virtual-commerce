# Usamos una imagen de Node.js para construir la app de React
FROM node:18-alpine AS builder

WORKDIR /app

# Copiar package.json e instalar dependencias
COPY package.json package-lock.json ./
RUN npm install --silent

# Copiar el resto de los archivos del frontend
COPY . .

# Construir la aplicaci칩n
RUN npm run build

# Usamos Nginx para servir la app en producci칩n
FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html

# Configurar Nginx con el archivo de configuraci칩n personalizado
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exponer el puerto donde correr치 el frontend
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
